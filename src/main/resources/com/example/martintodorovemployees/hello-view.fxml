<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.martintodorovemployees.controller.MainController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="selectFileBtn" text="Select CSV File"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="table" prefWidth="680" prefHeight="400">
            <columns>
                <TableColumn fx:id="colEmp1" text="Employee #1" prefWidth="140"/>
                <TableColumn fx:id="colEmp2" text="Employee #2" prefWidth="140"/>
                <TableColumn fx:id="colProj" text="Project ID" prefWidth="140"/>
                <TableColumn fx:id="colDays" text="Days Worked" prefWidth="140"/>
            </columns>
        </TableView>
    </center>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</BorderPane>
